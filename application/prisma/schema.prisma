generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto())  @map("_id") @db.ObjectId
  name          String
  secondName      String
  email         String  @unique
  password      String
  occupation    Occupation
  terms         Boolean
  createdAt     DateTime  @default(now())  @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  licensePlate LicensePlate? @unique 
  presences     Presence[]
  drivingArea   DriversAreas?
}

model Task {
  id String @id @default(auto())  @map("_id") @db.ObjectId
  title String
  isDone Boolean
  active Boolean
  createdAt DateTime @default(now())
  taskContent String
}

model ShoppingList {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name    String                                                              
  products Product[]
}

model Product {
  id           String @id @default(auto()) @map("_id")  @db.ObjectId
  name         String                                  
  quantity     Int   
  unit         Unit                                  
  shoppingList ShoppingList @relation(fields: [shoppingListId], references: [id])
  shoppingListId String @db.ObjectId
}

model Presence {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  hours         Int
  date          DateTime @default(now()) 
  user          User      @relation(fields: [licensePlate], references: [licensePlate])
  licensePlate  LicensePlate 
}

model sellOrders {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  buyerCity     String
  buyerPhone    Int
  buyerName     String
  buyerStreet   String
  buyerZipCode  String
  sellerName    String
  sellerCity    String
  sellerStreet  String
  sellerZipCode String
  sellerPhone   Int
  productName   String
  quantity      Int
  unit          Unit
  priceNetto    Int
  priceBrutto   Int
  clientNip     Int
  sellerNip     Int
  area          DriversAreas
}

enum Unit {
  SZTUKI
  KARTONY
  BINDY
  BUTELKI
  OPACKOWANIA
  RYZY
}

enum DriversAreas {
  N
  S
  W
  E
  NE
  NW
  SW
  SE
}

enum Occupation {
  DRIVER
  SALESMAN
}

enum LicensePlate {
  WPRAB123
  WPRCD456
  WPREF789
  WPRGH012
  WPRIJ345
  WPRKL678
}